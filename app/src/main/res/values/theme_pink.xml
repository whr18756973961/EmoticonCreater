<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="pink_color_primary">@color/bilibili_pink_500</color>
    <color name="pink_color_primary_dark">@color/bilibili_pink_700</color>
    <color name="pink_color_accent">@color/bilibili_pink_accent_700</color>
    <color name="pink_window_background">#F4F4F4</color>
    <color name="pink_icon_color">@color/material_light_black</color>
    <color name="pink_card_background">@color/material_white</color>
    <color name="pink_title_color">@color/material_light_white</color>
    <color name="pink_subtitle_color">@color/material_grey_350</color>
    <color name="pink_selected_color">@color/material_grey_350</color>
    <color name="pink_text_color_primary">#212121</color>
    <color name="pink_text_color_secondary">#757575</color>

    <style name="ThemePink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink_color_primary</item>
        <item name="colorPrimaryDark">@color/pink_color_primary_dark</item>
        <item name="colorAccent">@color/pink_color_accent</item>
        <item name="android:windowBackground">@color/pink_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/pink_text_color_primary</item>
        <item name="android:textColorSecondary">@color/pink_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/pink_icon_color</item>
        <item name="card_background">@color/pink_card_background</item>
        <item name="title_color">@color/pink_title_color</item>
        <item name="subtitle_color">@color/pink_subtitle_color</item>
        <item name="selected_color">@color/pink_selected_color</item>
        <item name="popup_theme">@style/PopupThemePink</item>
        <item name="appbar_theme">@style/AppbarThemePink</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">
            @style/ContextPopupThemePink
        </item>
        <item name="popup_menu_theme">@style/PopupMenuPink</item>
        <item name="alertDialogTheme">@style/DialogThemePink</item>
        <item name="android:alertDialogTheme">@style/DialogThemePink</item>
    </style>

    <style name="DialogThemePink" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/pink_icon_color</item>
        <item name="colorPrimary">@color/pink_color_primary</item>
        <item name="colorPrimaryDark">@color/pink_color_primary_dark</item>
        <item name="colorAccent">@color/pink_color_accent</item>
        <item name="android:windowBackground">@color/pink_window_background</item>
    </style>

    <style name="AppbarThemePink" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuPink" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/pink_window_background</item>
    </style>

    <style name="PopupThemePink" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/pink_window_background</item>
    </style>

    <style name="ContextPopupThemePink" parent="PopupThemePink">
        <item name="android:popupBackground">@color/pink_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>