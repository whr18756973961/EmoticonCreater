<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="light_teal_color_primary">@color/material_teal_500</color>
    <color name="light_teal_color_primary_blur">#DD009688</color>
    <color name="light_teal_color_primary_dark">@color/material_teal_700</color>
    <color name="light_teal_color_accent">@color/material_green_accent_700</color>
    <color name="light_teal_window_background">#F4F4F4</color>
    <color name="light_teal_icon_color">@color/material_light_black</color>
    <color name="light_teal_card_background">@color/material_white</color>
    <color name="light_teal_title_color">@color/material_light_white</color>
    <color name="light_teal_subtitle_color">@color/material_grey_350</color>
    <color name="light_teal_selected_color">@color/material_grey_350</color>
    <color name="light_teal_text_color_primary">#212121</color>
    <color name="light_teal_text_color_secondary">#757575</color>

    <style name="ThemeLightTeal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_teal_color_primary</item>
        <item name="colorPrimaryDark">@color/light_teal_color_primary_dark</item>
        <item name="colorAccent">@color/light_teal_color_accent</item>
        <item name="android:windowBackground">@color/light_teal_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/light_teal_text_color_primary</item>
        <item name="android:textColorSecondary">@color/light_teal_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/light_teal_icon_color</item>
        <item name="card_background">@color/light_teal_card_background</item>
        <item name="title_color">@color/light_teal_title_color</item>
        <item name="subtitle_color">@color/light_teal_subtitle_color</item>
        <item name="selected_color">@color/light_teal_selected_color</item>
        <item name="color_primary_blur">@color/light_teal_color_primary_blur</item>
        <item name="popup_theme">@style/PopupThemeLightTeal</item>
        <item name="appbar_theme">@style/AppbarThemeLightTeal</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/ContextPopupThemeLightTeal</item>
        <item name="popup_menu_theme">@style/PopupMenuLightTeal</item>
    </style>

    <style name="DialogThemeLightTeal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/light_teal_icon_color</item>
        <item name="colorPrimary">@color/light_teal_color_primary</item>
        <item name="colorPrimaryDark">@color/light_teal_color_primary_dark</item>
        <item name="colorAccent">@color/light_teal_color_accent</item>
        <item name="android:windowBackground">@color/light_teal_window_background</item>
    </style>

    <style name="AppbarThemeLightTeal" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuLightTeal" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/light_teal_window_background</item>
    </style>

    <style name="PopupThemeLightTeal" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/light_teal_window_background</item>
    </style>

    <style name="ContextPopupThemeLightTeal" parent="PopupThemeLightTeal">
        <item name="android:popupBackground">@color/light_teal_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>