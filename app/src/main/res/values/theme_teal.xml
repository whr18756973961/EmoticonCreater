<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="teal_color_primary">@color/material_teal_500</color>
    <color name="teal_color_primary_dark">@color/material_teal_700</color>
    <color name="teal_color_accent">@color/material_teal_accent_700</color>
    <color name="teal_window_background">#F4F4F4</color>
    <color name="teal_icon_color">@color/material_light_black</color>
    <color name="teal_card_background">@color/material_white</color>
    <color name="teal_title_color">@color/material_white</color>
    <color name="teal_subtitle_color">@color/material_grey_350</color>
    <color name="teal_selected_color">@color/material_grey_350</color>
    <color name="teal_text_color_primary">#212121</color>
    <color name="teal_text_color_secondary">#757575</color>

    <style name="ThemeTeal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_color_primary</item>
        <item name="colorPrimaryDark">@color/teal_color_primary_dark</item>
        <item name="colorAccent">@color/teal_color_accent</item>
        <item name="android:windowBackground">@color/teal_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/teal_text_color_primary</item>
        <item name="android:textColorSecondary">@color/teal_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/teal_icon_color</item>
        <item name="card_background">@color/teal_card_background</item>
        <item name="title_color">@color/teal_title_color</item>
        <item name="subtitle_color">@color/teal_subtitle_color</item>
        <item name="selected_color">@color/teal_selected_color</item>
        <item name="popup_theme">@style/PopupThemeTeal</item>
        <item name="appbar_theme">@style/AppbarThemeTeal</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/ContextPopupThemeTeal</item>
        <item name="popup_menu_theme">@style/PopupMenuTeal</item>
        <item name="alertDialogTheme">@style/DialogThemeTeal</item>
        <item name="android:alertDialogTheme">@style/DialogThemeTeal</item>
    </style>

    <style name="DialogThemeTeal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/teal_icon_color</item>
        <item name="colorPrimary">@color/teal_color_primary</item>
        <item name="colorPrimaryDark">@color/teal_color_primary_dark</item>
        <item name="colorAccent">@color/teal_color_accent</item>
        <item name="android:windowBackground">@color/teal_window_background</item>
    </style>

    <style name="AppbarThemeTeal" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuTeal" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/teal_window_background</item>
    </style>

    <style name="PopupThemeTeal" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/teal_window_background</item>
    </style>

    <style name="ContextPopupThemeTeal" parent="PopupThemeGreen">
        <item name="android:popupBackground">@color/teal_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>