<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="green_color_primary">@color/material_green_500</color>
    <color name="green_color_primary_dark">@color/material_green_700</color>
    <color name="green_color_accent">@color/material_green_accent_700</color>
    <color name="green_window_background">#F4F4F4</color>
    <color name="green_icon_color">@color/material_light_black</color>
    <color name="green_card_background">@color/material_white</color>
    <color name="green_title_color">@color/material_light_white</color>
    <color name="green_subtitle_color">@color/material_grey_350</color>
    <color name="green_selected_color">@color/material_grey_350</color>
    <color name="green_text_color_primary">#212121</color>
    <color name="green_text_color_secondary">#757575</color>

    <style name="ThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_color_primary</item>
        <item name="colorPrimaryDark">@color/green_color_primary_dark</item>
        <item name="colorAccent">@color/green_color_accent</item>
        <item name="android:windowBackground">@color/green_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/green_text_color_primary</item>
        <item name="android:textColorSecondary">@color/green_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/green_icon_color</item>
        <item name="card_background">@color/green_card_background</item>
        <item name="title_color">@color/green_title_color</item>
        <item name="subtitle_color">@color/green_subtitle_color</item>
        <item name="selected_color">@color/green_selected_color</item>
        <item name="popup_theme">@style/PopupThemeGreen</item>
        <item name="appbar_theme">@style/AppbarThemeGreen</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/ContextPopupThemeGreen</item>
        <item name="popup_menu_theme">@style/PopupMenuGreen</item>
        <item name="alertDialogTheme">@style/DialogThemeGreen</item>
        <item name="android:alertDialogTheme">@style/DialogThemeGreen</item>
    </style>

    <style name="DialogThemeGreen" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/green_icon_color</item>
        <item name="colorPrimary">@color/green_color_primary</item>
        <item name="colorPrimaryDark">@color/green_color_primary_dark</item>
        <item name="colorAccent">@color/green_color_accent</item>
        <item name="android:windowBackground">@color/green_window_background</item>
    </style>

    <style name="AppbarThemeGreen" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuGreen" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/green_window_background</item>
    </style>

    <style name="PopupThemeGreen" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/green_window_background</item>
    </style>

    <style name="ContextPopupThemeGreen" parent="PopupThemeGreen">
        <item name="android:popupBackground">@color/green_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>