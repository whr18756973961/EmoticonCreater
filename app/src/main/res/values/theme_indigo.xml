<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="indigo_color_primary">@color/material_indigo_500</color>
    <color name="indigo_color_primary_dark">@color/material_indigo_700</color>
    <color name="indigo_color_accent">@color/material_indigo_accent_700</color>
    <color name="indigo_window_background">#F4F4F4</color>
    <color name="indigo_icon_color">@color/material_light_black</color>
    <color name="indigo_card_background">@color/material_white</color>
    <color name="indigo_title_color">@color/material_light_white</color>
    <color name="indigo_subtitle_color">@color/material_grey_350</color>
    <color name="indigo_selected_color">@color/material_grey_350</color>
    <color name="indigo_text_color_primary">#212121</color>
    <color name="indigo_text_color_secondary">#757575</color>

    <style name="ThemeIndigo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_color_primary</item>
        <item name="colorPrimaryDark">@color/indigo_color_primary_dark</item>
        <item name="colorAccent">@color/indigo_color_accent</item>
        <item name="android:windowBackground">@color/indigo_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/indigo_text_color_primary</item>
        <item name="android:textColorSecondary">@color/indigo_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/indigo_icon_color</item>
        <item name="card_background">@color/indigo_card_background</item>
        <item name="title_color">@color/indigo_title_color</item>
        <item name="subtitle_color">@color/indigo_subtitle_color</item>
        <item name="selected_color">@color/indigo_selected_color</item>
        <item name="popup_theme">@style/PopupThemeIndigo</item>
        <item name="appbar_theme">@style/AppbarThemeIndigo</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/ContextPopupThemeIndigo</item>
        <item name="popup_menu_theme">@style/PopupMenuIndigo</item>
        <item name="alertDialogTheme">@style/DialogThemeIndigo</item>
        <item name="android:alertDialogTheme">@style/DialogThemeIndigo</item>
    </style>

    <style name="DialogThemeIndigo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="icon_color">@color/indigo_icon_color</item>
        <item name="colorPrimary">@color/indigo_color_primary</item>
        <item name="colorPrimaryDark">@color/indigo_color_primary_dark</item>
        <item name="colorAccent">@color/indigo_color_accent</item>
        <item name="android:windowBackground">@color/indigo_window_background</item>
    </style>

    <style name="AppbarThemeIndigo" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="PopupMenuIndigo" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/indigo_window_background</item>
    </style>

    <style name="PopupThemeIndigo" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/indigo_window_background</item>
    </style>

    <style name="ContextPopupThemeIndigo" parent="PopupThemeIndigo">
        <item name="android:popupBackground">@color/indigo_window_background</item>
        <!--
         ~  Context menu of a RecyclerView is displayed in the wrong location when setting
         ~  a contextPopupMenuStyle on Android N, set bellow can fix it.
        -->
        <item name="android:overlapAnchor">true</item>
    </style>

</resources>